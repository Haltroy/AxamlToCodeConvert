<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
        x:Class="AvaloniaFormsConverter.App.MainWindow"
        Title="AXAML to Code Converter">
	<Grid RowDefinitions="40,20,*" ColumnDefinitions="*,*">
		<Menu Grid.Row="0">
			<MenuItem Header="Open a File..." Click="OpenFile" />
			<MenuItem Header="About" Click="About" />
		</Menu>
		<TextBlock Text="XAML:" Grid.Row="1" Grid.Column="0" />
		<TextBlock Text="InitializeComponent():" Grid.Row="1" Grid.Column="1" />
		<TextBox Name="AXAML" Background="Transparent" Grid.Row="2" Grid.Column="0" />
		<TextBox Name="Code" Background="Transparent" Grid.Row="2" Grid.Column="1" IsReadOnly="True" />
	</Grid>
</Window>